<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/set_color"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/header_bg">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="软 件 锁"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>

        <Button
                android:layout_width="50dip"
                android:layout_height="30dip"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dip"
                android:background="@drawable/back_btn_selector"
                android:gravity="center"
                android:onClick="onBack"
                android:text="返回"
                android:textColor="@color/dialog_text"
                android:textSize="16sp"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

            <ListView
                    android:id="@+id/lv_unlock_app"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:cacheColorHint="#00000000"
                    android:divider="#00ffffff"
                    android:dividerHeight="3.0dip"
                    android:listSelector="@drawable/focused_bg"
                    android:paddingLeft="3.0dip"
                    android:paddingRight="3.0dip" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_gravity="bottom|center_vertical"
                    android:background="#ffDBDBDB"
                    android:orientation="vertical" >

                <Button
                        android:id="@+id/add_lock_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"
                        android:background="@drawable/common_button_big_right_bg"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="添  加" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
                android:id="@+id/rl_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            <LinearLayout
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/mark"
                    android:gravity="center"
                    android:orientation="vertical" >

                <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dip"
                        android:text="正在加载..."
                        android:textColor="@color/dialog_text" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>