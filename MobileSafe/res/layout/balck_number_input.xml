<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_color"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/header_bg" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="添加黑名单"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:layout_width="50dip"
            android:layout_height="30dip"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dip"
            android:background="@drawable/back_btn_selector"
            android:gravity="center"
            android:onClick="onBack"
            android:text="返回"
            android:textColor="@color/dialog_text"
            android:textSize="16sp" />
    </FrameLayout>

    <com.faker.mobilesafe.view.ui.ClearEditText
        android:id="@+id/number_input"
        style="@style/clearedit_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:hint="输入一个电话或手机号码"
        android:inputType="number"
        android:singleLine="true" />

    <requestFocus />

    <TextView
        android:id="@+id/is_black_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:text="是黑名单" >
    </TextView>

    <Button
        android:id="@+id/add_comfirm"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/common_button_big_right_bg"
        android:enabled="false"
        android:gravity="center"
        android:text="确   定" />

</LinearLayout>