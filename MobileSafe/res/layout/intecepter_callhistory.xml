<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/header_bg"
        android:gravity="center"
        android:text="电话拦截记录"
        android:textColor="@color/white_color"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/callhistory_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@drawable/main_gvitem_selector" >
            </ListView>

            <TextView
                android:id="@+id/empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="当前没有电话拦截记录"
                android:textColor="@color/hinttext_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_gravity="bottom|center_vertical"
            android:background="@color/set_color"
            android:orientation="vertical" >

            <Button
                android:id="@+id/delete_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:background="@drawable/common_button_big_right_bg"
                android:enabled="false"
                android:gravity="center"
                android:text="全部删除" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>